<div id='ssh_key_dialog' class="modal">
  <div class="modal-background"></div>
  <div class="modal-content">
    <div class="box">
      <div class='container'>

        <%= form_tag(account_ssh_keys_path, method: 'POST', id: 'ssh_key_dialog_form') do |f| %>
          <div class="field">
            <label class="label">Label</label>
            <div class="control">
              <input class="input" type="text" placeholder="" name='ssh_key[name]' id='ssh_key_dialog_form_ssh_key_name'>
              <p class="help">Any label to help you identify this key</p>
            </div>
          </div>

          <div class="field">
            <label class="label">SSH Key</label>
            <div class="control">
              <textarea class="textarea" placeholder="ssh-rsa AAAA... you@example.com" name='ssh_key[key]' id='ssh_key_dialog_form_ssh_key_key'></textarea>
              <p class="help">Paste your public SSH key</p>
            </div>
          </div>

          <div class="field">
            <label class="label">Username</label>
            <div class="control">
              <input class="input" type="text" placeholder="" name='ssh_key[username]' id='ssh_key_dialog_form_ssh_key_username'>
              <p class="help">User that will be <strong>auto-generated</strong> and assigned this key</p>
            </div>
          </div>

          <div class="field is-grouped">
            <div class="control">
              <button class="button is-link" id="add_ssh_key">Add Key</button>
            </div>
            <div class="control">
              <button class="button is-link is-light modal-cancel" data-target='#ssh_key_dialog' id='ssh_key_dialog_form_cancel_button'>Cancel</button>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
