<div id='ssh_key_dialog' class="modal">
  <div class="modal-background"></div>
  <div class="modal-content">
    <div class="box">
      <div class='container'>

        <%= form_tag(account_ssh_keys_path, method: 'POST', remote: true) do |f| %>
          <div class="field">
            <label class="label">Name</label>
            <div class="control">
              <input class="input" type="text" placeholder="" name='ssh_key[name]'>
              <p class="help">Any name to help you identify this key</p>
            </div>
          </div>

          <div class="field">
            <label class="label">SSH Key</label>
            <div class="control">
              <textarea class="textarea" placeholder="ssh-rsa AAAA... you@example.com" name='ssh_key[key]'></textarea>
              <p class="help">Paste your public SSH key</p>
            </div>
          </div>

          <div class="field is-grouped">
            <div class="control">
              <button class="button is-link">Add Key</button>
            </div>
            <div class="control">
              <button class="button is-link is-light modal-cancel" data-target='#ssh_key_dialog'>Cancel</button>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </div>
</div>
