<div class="error">
  <%= error_messages_for :payment %>
</div>

<div class="columns">
  <div class="column">
  </div>
  <div class="column is-two-thirds">


    <h1 class="title">Invoice Payment</h1>

    <div class="box">
      <div class="container">
        <%= form_for [:admin, @invoice, @payment] do |f| %>
          <div class="field">
            <label class="label">Account</label>
            <div class="control">
              <%= @invoice.account.display_account_name_with_login %>
            </div>
          </div>

          <div class="field">
            <label class="label">Invoice No.</label>
            <div class="control">
              <%= @invoice.id %>
            </div>
          </div>

          <div class="field">
            <label class="label">Invoice Total</label>
            <div class="control">
              $<%= @invoice.total %>
            </div>
          </div>

          <div class="columns">
            <div class="column">
              <div class="field">
                <label class="label">Date</label>
                <div class="control">
                  <%= f.date_field :date, class: 'input is-small' %>
                </div>
              </div>
            </div>
            <div class="column">
            </div>
            <div class="column">
            </div>
          </div>

          <div class="field">
            <label class="label">Reference Number</label>
            <div class="control">
              <%= f.text_field :reference_number, class: 'input is-small' %>
            </div>
          </div>

          <div class="columns">
            <div class="column">
              <div class="field">
                <label class="label">Check Number</label>
                <div class="control">
                  <%= f.text_field :check_number, class: 'input is-small' %>
                </div>
              </div>
            </div>
            <div class="column">
            </div>
            <div class="column">
            </div>
          </div>

          <div class="field">
            <label class="label">Method</label>
            <div class="control">
              <div class="select">
                <%= f.select :method, ['Check', PayPal', 'Stripe'], include_blank: true  %>
              </div>
            </div>
          </div>

          <div class="columns">
            <div class="column">
              <div class="field">
                <label class="label">Amount</label>
                <div class="control">
                  <%= f.text_field :amount, class: 'input' %>
                </div>
              </div>
            </div>
            <div class="column">
            </div>
            <div class="column">
            </div>
          </div>

          <div class="field">
            <label class="label">Notes</label>
            <div class="control">
              <%= f.text_area :notes, class: 'textarea' %>
            </div>
          </div>

          <div class="field is-grouped">
            <div class="control">
              <input type='submit' value="Save" class='button is-link' />
            </div>
            <div class="control">
              <button class='button is-link is-light'>Cancel</button>
            </div>
          </div>
        <% end %>
      </div>
    </div>

  </div>
  <div class="column">
  </div>

</div>
