# puts ''
puts '  dev/docker up'
puts '     # setup containers for development'
puts ''
puts '  dev/docker down'
puts '     # turn off all containers'
puts ''
puts '  dev/rspec OPTIONS'
puts '     # run tests in specific folder or files'
puts ''
puts '  dev/rails OPTIONS'
puts '     # run rails in docker with same options as the bin/rails'
puts ''
puts '  dev/rake OPTIONS'
puts '     # run rake in docker with same options as the bin/rake'
puts ''
puts '  dev/bundle OPTIONS'
puts '     # run bundle in docker'
puts ''
puts '  dev/yarn OPTIONS'
puts '     # run yarn in docker'
puts ''
puts '  dev/help'
puts '     # Show this help'
puts ''